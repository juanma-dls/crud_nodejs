<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="css/auth.css">
  <link rel="stylesheet" href="css/alert.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
    <div class="container">
      <a class="navbar-brand"><img src="img/icon.png" alt="Node.js icon" class="nav-icon"></a>
    </div>
  </nav>

  <div class="mt-5 col-sm-6">
    <%- include ('../Partials/message') %>
  </div>

  <section class="mt-5">
    <div class="container h-100 centered">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div>
            <a class="btn new-btn mb-3" href="./">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
              </svg>
               Home
            </a>
          </div>
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 mt-5 col-lg-5 align-middle">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">
                  <div class="text-center mb-3 pb-1">
                    <h2 class="fw-bold mb-0">Acceder</h2>
                  </div>
                  <br>
                  <form action="/signin" method="POST" class="d-flex flex-column "> 
                    <div class="form-outline mb-4">
                      <input type="text" name="username" required class="form-control form-control-lg" autocomplete="off" />
                      <label class="form-label" for="username" >Nombre de usuario</label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <div class="position-relative d-inline-block d-flex align-items-center input-field col-12">
                        <input type="password" name="password" id="password" required class="form-control form-control-lg">
                        <button class="btn pass-btn position-absolute" type="button" onclick="showPassword()"><i class="bi bi-eye"></i></button>
                      </div>
                      <label class="form-label" for="password">Contraseña</label>
                    </div>
                    
                    <div class="pt-1 mb-4">
                      <button type="submit" class="btn btn-dark btn-lg btn-block">Ingresar</button>
                    </div>
  
                    <h5 class="mb-5 pb-lg-2" >¿No tienes una cuenta? <a href="./signup" style="color: #393f81;">Regístrate aquí</a></h5>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/showPass.js"></script>
</body>

</html>